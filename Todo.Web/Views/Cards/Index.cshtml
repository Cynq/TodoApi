@model IEnumerable<Todo.Common.Models.Card>
@{
    ViewData["Title"] = "Zadania";
}

<div class="row">
    @foreach (var cart in Model)
    {
        <div class="card col-lg-3">
            <h3 class="text-center">@cart.Name</h3>
        </div>
        <div class="card col-lg-3">
            <h3 class="text-center">@cart.Name</h3>
        </div>
        <div class="card col-lg-3">
            <h3 class="text-center">@cart.Name</h3>
        </div>
        <div class="card col-lg-3">
            <h3 class="text-center">@cart.Name</h3>
        </div>
    }
    <div class="col-lg-3">
        <div class="add-card">   
            <button type="button" class="btn btn-success btn-circle btn-lg"><i class="glyphicon glyphicon-plus"></i></button>
        </div>

    </div>
</div>

<style>
    .card {
        border: black solid thin;
        padding: 5px;
        margin: 5px;
        border-radius: 5px;
    }
    .btn-circle {
        width: 50px;
        height: 50px;
        padding: 10px 16px;
        font-size: 18px;
        line-height: 1.33;
        border-radius: 25px;
    }
</style>